@page "/dilemma/false-witness"
@model TheEthicsArena.Web.Pages.Dilemmas.FalseWitnessModel
@{
    ViewData["Title"] = "The False Witness";
}

<div class="container mt-4">
    <!-- No Judgment Disclaimer -->
    <div class="alert alert-info border-0 mb-4">
        <div class="row align-items-center">
            <div class="col-1 text-center">
                <i class="fas fa-balance-scale fa-2x text-primary"></i>
            </div>
            <div class="col-11">
                <h6 class="mb-1">⚖️ Remember: There Are No Wrong Answers</h6>
                <small>This explores moral reasoning, not right vs wrong. Great philosophers disagree on these scenarios. Your choice reflects your values, not your worth.</small>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center text-danger mb-4">The False Witness</h1>
            
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <div class="scenario-text mb-4">
                        <p class="lead">@Model.Dilemma?.Scenario</p>
                    </div>
                    
                    <div class="text-center my-4">
                        <h4 class="text-dark">What do you choose?</h4>
                        <small class="text-muted">Take your time. There's no time limit.</small>
                    </div>
                    
                    <form method="post" id="dilemmaForm">
                        <input type="hidden" id="timeStarted" value="@DateTime.UtcNow.Ticks" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <button type="submit" name="choice" value="A" class="btn btn-outline-danger btn-lg w-100 p-4 choice-btn">
                                    <div class="choice-title">@Model.Dilemma?.OptionA</div>
                                    <small class="d-block mt-2 text-muted">@Model.Dilemma?.OptionADescription</small>
                                </button>
                            </div>
                            <div class="col-md-6 mb-3">
                                <button type="submit" name="choice" value="B" class="btn btn-outline-warning btn-lg w-100 p-4 choice-btn">
                                    <div class="choice-title">@Model.Dilemma?.OptionB</div>
                                    <small class="d-block mt-2 text-muted">@Model.Dilemma?.OptionBDescription</small>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (ViewData["Result"] != null)
            {
                <div class="mt-4">
                    <div class="alert alert-secondary border-0 shadow-sm" role="alert">
                        <h5 class="mb-3">Your Choice: @ViewData["ChoiceText"]</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="stats-box">
                                    <div class="stats-number">@ViewData["PercentageA"]%</div>
                                    <div class="stats-label">chose @Model.Dilemma?.OptionA</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stats-box">
                                    <div class="stats-number">@ViewData["PercentageB"]%</div>
                                    <div class="stats-label">chose @Model.Dilemma?.OptionB</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h6>Philosophical Perspective:</h6>
                            <p class="small">@Model.Dilemma?.PhilosophicalContext</p>
                        </div>
                        
                        <div class="mt-3 d-flex justify-content-between">
    <div>
        @if (Model.Navigation?.PreviousId != null)
        {
            <a href="@Model.Navigation.PreviousUrl" class="btn btn-outline-danger">
                ← @Model.Navigation.PreviousTitle
            </a>
        }
        <a href="/" class="btn btn-outline-secondary">🏠 Home</a>
    </div>
    <div>
        <a href="/dilemma/false-witness" class="btn btn-outline-secondary">🔄 Try Again</a>
        @if (Model.Navigation?.NextId != null)
        {
            <a href="@Model.Navigation.NextUrl" class="btn btn-danger">
                Next: @Model.Navigation.NextTitle →
            </a>
        }
        <span class="badge bg-success ms-2">9 of 10 Complete</span>
    </div>
</div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.choice-btn {
    transition: all 0.3s ease;
    border: 2px solid #ddd;
}
.choice-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}
.choice-title {
    font-weight: bold;
    font-size: 1.1em;
}
.stats-box {
    text-align: center;
    padding: 15px;
}
.stats-number {
    font-size: 2em;
    font-weight: bold;
    color: #dc3545;
}
.stats-label {
    font-size: 0.9em;
    color: #666;
}
</style>
